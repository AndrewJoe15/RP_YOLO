<UserControl x:Class="RP_YOLO.View.UserControl_Image"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RP_YOLO.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="亮度" Height="auto"/>
            <MenuItem Header="对比度" Height="auto"/>
            <MenuItem Header="画笔" Height="auto">
                <MenuItem Header="粗细" Height="auto"/>
            </MenuItem>
            <MenuItem Header="标签" Height="auto">
                <MenuItem Header="字体" Height="auto"/>
            </MenuItem>
        </Menu>
        <Image Grid.Row="1" x:Name="img_image"/>
        <TextBlock Grid.Row="2" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Center" 
                   FontSize="10" 
                   x:Name="txb_fileName" 
                   Style="{DynamicResource MaterialDesignTextBlock}"/>
    </Grid>
</UserControl>
